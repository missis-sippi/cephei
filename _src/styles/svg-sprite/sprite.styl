$svg-common 
	background url(sprite.css.svg) no-repeat

.svg-facebook
	@extend $svg-common
	background-position 0 0

.svg-facebook-icon
	width 50px
	height 50px

.svg-spinner
	@extend $svg-common
	background-position 50% 0

.svg-spinner-icon
	width 50px
	height 50px

.svg-twitter
	@extend $svg-common
	background-position 0 100%

.svg-twitter-icon
	width 50px
	height 50px

.svg-vkontakte
	@extend $svg-common
	background-position 50% 100%

.svg-vkontakte-icon
	width 50px
	height 50px

.svg-youtube
	@extend $svg-common
	background-position 100% 0

.svg-youtube-icon
	width 50px
	height 50px

